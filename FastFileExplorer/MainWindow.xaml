<Window
    x:Class="FastFileExplorer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:FastFileExplorer"
    xmlns:models="using:FastFileExplorer.Models"
    mc:Ignorable="d"
    Title="Fast File Explorer">

    <Grid RowDefinitions="Auto,*">
        <!-- Header Bar -->
        <StackPanel Orientation="Horizontal" Background="#FF2D2D30" Padding="10" Spacing="10" VerticalAlignment="Center">
            <Button Content="Back" Click="BackButton_Click" Width="80" />
            <Button Content="Load" Click="LoadButton_Click" Width="80" />
            <StackPanel x:Name="BreadcrumbPanel" Orientation="Horizontal" VerticalAlignment="Center" Spacing="5" />
            <TextBox x:Name="SearchTextBox" Width="300" PlaceholderText="Search by name..." TextChanged="SearchTextBox_TextChanged" />
        </StackPanel>

        <!-- File List -->
        <ListView x:Name="FileListView"
          Grid.Row="1"
          Margin="10"
          SelectionMode="Single"
          IsItemClickEnabled="True"
          ItemClick="FileListView_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:FileItem">
                    <StackPanel Orientation="Horizontal" Padding="5" Spacing="10">
                        <Image Source="{x:Bind Icon}" Width="24" Height="24" />
                        <TextBlock Text="{x:Bind Name}" FontSize="16" VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
